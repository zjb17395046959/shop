page {
  height: 100%;
}
.login {
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.login .login-img {
  width: 240rpx;
  margin: 40rpx auto;
  display: block;
}
.login .login-input .login-input-box {
  margin-bottom: 36rpx;
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid orange;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.login .login-input .login-input-box .login-img1 {
  width: 40rpx;
  height: 40rpx;
}
.login .login-input .login-input-box input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: block;
}
.login .login-input .login-input-box .icon {
  margin-left: 20rpx;
  font-size: 44rpx;
}
.login .btn {
  -webkit-border-radius: 44rpx;
          border-radius: 44rpx;
  background-color: #fca12b;
  color: #fff;
}
.login button::after {
  border: none;
}
.login .zc {
  color: #666;
  font-size: 30rpx;
  margin-top: 40rpx;
}
.login .yzm {
  font-size: 24rpx;
  color: #fca12b;
}
.login .isPass {
  color: blue;
  font-weight: bold;
}

