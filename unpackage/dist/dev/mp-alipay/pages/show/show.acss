page {
  height: 100%;
}
.show-nav {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: absolute;
  left: 0;
  top: 30rpx;
}
.show-nav > image {
  width: 40rpx;
  height: 40rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  padding: 10rpx;
  background-color: rgba(0, 0, 0, 0.4);
  margin-left: 20rpx;
}
.show-nav > view {
  font-size: 40rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  padding: 10rpx;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
  margin-right: 20rpx;
}
.show {
  width: 100%;
  height: 100%;
}
.show .show-swiper {
  width: 100%;
  height: 400rpx;
  position: relative;
}
.show .show-swiper .banner {
  width: 100%;
  height: 400rpx !important;
}
.show .show-swiper .swiper-item {
  width: 100%;
  height: 100%;
}
.show .show-swiper .swiper-item image {
  width: 100%;
  height: 100%;
}
.show .show-list {
  padding: 20rpx 20rpx;
}
.show .show-list .show-list-box {
  width: 100%;
  height: 100%;
  border-bottom: 1rpx solid #ccc;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}
.show .show-list .show-list-box .img {
  width: 200rpx;
  height: 200rpx;
}
.show .show-list .show-list-box .show-list-box-middle {
  width: 500rpx;
}
.show .show-list .show-list-box .show-list-box-middle .show-list-box-middle-title {
  font-size: 30rpx;
  color: #555;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}
.show .show-list .show-list-box .show-list-box-middle .show-list-box-middle-introduction {
  font-size: 24rpx;
  color: #989898;
  word-break: break-all;
  -webkit-line-clamp: 3;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  line-height: 54rpx;
}
.active {
  background-color: #eee;
}

