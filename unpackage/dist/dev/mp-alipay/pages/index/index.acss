.status_bar {
  height: 25px;
  width: 100%;
}
page {
  height: 100%;
}
.index {
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.index .index-input-search {
  padding: 20rpx 40rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.index .index-input-search input {
  width: 100%;
  height: 60rpx;
  -webkit-border-radius: 30rpx;
          border-radius: 30rpx;
  background-color: #eee;
  padding-left: 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.index .index-input-search .input-active {
  background: url(/static/img/search.png) no-repeat left;
  background-size: 40rpx 40rpx;
  padding-left: 50rpx;
}
.index .list-box {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  overflow: auto;
}
.index .index-swiper {
  width: 100%;
  height: 340rpx;
  margin-bottom: 20rpx;
}
.index .index-swiper > swiper {
  height: 100% !important;
}
.index .index-swiper .img {
  width: 100%;
  height: 100%;
}
.index .index-banner {
  height: 300rpx;
  width: 100%;
  margin: 20rpx 0;
}
.index .index-banner > image {
  width: 100%;
  height: 300rpx;
}
.index .index-shop-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0 20rpx;
}
.index .index-shop-list .list-wrap {
  width: 48%;
  margin-bottom: 40rpx;
}
.index .index-shop-list .list-wrap > image {
  width: 100%;
  height: 250rpx;
  -webkit-border-radius: 20rpx;
          border-radius: 20rpx;
}
.index .index-shop-list .list-wrap .list-wrap-title {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 30rpx;
  margin-top: 20rpx;
  padding-left: 10rpx;
}
.index .index-shop-list .list-wrap .list-wrap-price {
  padding-left: 8rpx;
  color: #f37785;
  font-weight: bold;
  font-size: 28rpx;
}
.index .index-shop-list .list-wrap .list-wrap-price > text:nth-child(2) {
  font-size: 20rpx;
  color: #888;
  text-decoration: line-through;
  margin-left: 10rpx;
}
.index .index-shop-list .list-wrap .list-wrap-label {
  padding-left: 10rpx;
}
.index .index-shop-list .list-wrap .list-wrap-label > text {
  padding: 4rpx 8rpx;
  color: orange;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  font-size: 10rpx;
  background-color: #fdf3e7;
  margin-right: 10rpx;
}
.index .index-shop-list .list-wrap .list-wrap-label > text:nth-child(2) {
  color: #ff0016;
  background-color: #ffe9eb;
}

